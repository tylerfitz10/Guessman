import sys
import os
import time
import random

def get_word():
    words = ['Apple']
    #words = ['Apple','Bike','Python', 'Module', 'Variable']
    return  random.choice(words).upper()


def vowel_count(word):
    vowels = ['A', 'E', 'I','O','U']
    vowelCount = 0
    for vowel in vowels:
        if vowel in word:
            vowelCount += 1
    print('There are '+str(vowelCount)+' vowels in the word')

def find_indices(word, guess):
    #ToDo look up enumerate 
    #ToDo look up list comprehension 
    return [n for n, c in enumerate(word) if c == guess]


